<div class="contents">
  <h1><%= @user.name %>のページ</h1>

  <div class="row">
    <div class="col-xs-5 col-md-2 col-md-offset-2 user-info">メールアドレス:</div>
    <div class="col-xs-7 col-md-6 user-info"><%= @user.email %></div>
    <div class="col-xs-5 col-md-2 col-md-offset-2 user-info">プロフィール画像:</div>
    <div class="col-xs-7 col-md-6 user-info"><%= image_tag @user.image %></div>
  </div>
  <h2>お気に入り一覧</h2>
  <div class="row blog-title">
    <div class="col-xs-5 col-md-2 col-md-offset-2">タイトル</div>
    <div class="col-xs-7 col-md-6">内容</div>
  </div>
  <% @favorites_blogs.each do |blog| %>
  <div class="row">
    <div class="col-xs-5 col-md-2 col-md-offset-2 blog-content">
      <%= blog.title %>
    </div>
    <div class="col-xs-7 col-md-6 blog-content">
      <%= blog.content %>
    </div>
  </div>
  <% end %>
</div>
