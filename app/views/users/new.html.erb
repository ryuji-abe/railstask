<div class="contents">
  <h1>ユーザー登録</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul class="row">
      <% @user.errors.full_messages.each do |message| %>
        <li class="col-xs-offset-2 col-sm-offset-3 col-md-offset-4"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true) do |f| %>
    <div class="row input-user-info">
      <%= f.label :name, class:'col-xs-4' %>
      <%= f.text_field :name, class:'col-xs-6 user-input' %>
    </div>
    <div class="row input-user-info">
      <%= f.label :email, class:'col-xs-4' %>
      <%= f.email_field :email, class:'col-xs-6 user-input' %>
    </div>
    <div class="row input-user-info">
      <%= f.label :password, class:'col-xs-4' %>
      <%= f.password_field :password, class:'col-xs-6 user-input' %>
    </div>
    <div class="row input-user-info">
      <%= f.label :password_confirmation, class:'col-xs-4' %>
      <%= f.password_field :password_confirmation, class:'col-xs-6 user-input' %>
    </div>
    <div class="row field input-user-info">
      <%= f.label :image, class:'col-xs-4'  %>
      <%= f.file_field :image, id: :feed_image, class:'col-xs-6 user-input'  %>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="link-button">
      <%= f.submit "ユーザー登録", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
