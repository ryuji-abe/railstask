<div class="contents">
  <h1>ブログ一覧</h1>
  <p class="alert-info"><%= notice %></p>

  <div class="row blog-title">
    <div class="col-xs-5 col-md-2 col-md-offset-1">タイトル</div>
    <div class="col-xs-7 col-md-5">内容</div>
  </div>
  <% @blogs.each do |blog| %>
  <div class="row">
    <div class="col-xs-5 col-md-2 col-md-offset-1 blog-content">
      <%= blog.title %>
    </div>
    <div class="col-xs-7 col-md-5 blog-content">
      <%= blog.content %>
    </div>
    <div class="col-xs-offset-5 col-xs-2 col-sm-offset-8 col-sm-1 col-md-offset-0 blog-button">
      <%= link_to '詳細', blog_path(blog.id), class:'btn btn-default' %>
    </div>
    <% if blog.user_id == current_user.id %>
      <div class="col-xs-offset-0 col-xs-2 col-sm-offset-0 col-sm-1 col-md-offset-0 blog-button">
        <%= link_to "編集", edit_blog_path(blog.id), class:'btn btn-default', data: { confirm: '本当に編集していいですか？' } %>
      </div>
      <div class="col-xs-offset-0 col-xs-2 col-sm-offset-0 col-sm-1 col-md-offset-0 blog-button">
        <%= link_to '削除', blog_path(blog.id), class:'btn btn-default', method: :delete, data: { confirm: '本当に削除していいですか？' } %>
      </div>
    <% end %>
  </div>
  <% end %>
  <div class="link-button">
    <%= link_to '新規投稿', new_blog_path, class:'btn btn-default' %>
  </div>
</div>
